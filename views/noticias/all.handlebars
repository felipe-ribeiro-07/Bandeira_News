<!-- NOTÍCIAS -->
<section class="news-section mt-5 mb-3">
    <div class="container">

        <div class="row mb-3">
            <div class="col-12">
                <h2 class="noticia">Notícias</h2>
                <hr class="w-25">
            </div>
        </div>

        <div class="row g-3 gx-lg-4 justify-content-center">
            {{#each noticia}}
            <div class="col-12 col-xl-6">
                <article class="product">

                    <div class="product-image-wrapper">
                        <img src="https://placehold.co/400x400"
                             alt="{{this.titulo}}"
                             class="imageSingle">
                    </div>

                    <div class="contentLeft">
                        <h2 class="fs-4 mb-1">{{this.titulo}}</h2>

                        <p class="text-truncate-3 small text-muted mb-2">
                            {{this.conteudo}}
                        </p>

                        <a href="/noticia/{{this.id}}" class="btn btn-success btn-sm px-4">
                            Ler mais
                        </a>
                    </div>

                </article>
            </div>
            {{/each}}
        </div>

    </div>
</section>
